@{
    Layout = "./_Layout.cshtml";
}
<div class="row col-10">
    <div class="col-10 render-body">
        @RenderBody()
    </div>
    <div class="col-2">
        <ul class="list-group">
            <li class="list-group-item"><a>@Html.ActionLink("Главная", "Index", "ResponsibleForIndex")</a></li>
            <li class="list-group-item"><a>@Html.ActionLink("Гостевая", "Guest", "ResponsibleForGuest")</a></li>
            <li class="list-group-item"><a>@Html.ActionLink("Анкета", "ProfileGuest", "ResponsibleForProfileGuest")</a></li>
        </ul>
        
        @using (Html.BeginForm("Index","ResponsibleForIndex",FormMethod.Post))
        {
        <div class="radio card text-white bg-dark mb-3">
            @Html.Label("text", "Вы бы хотели быть феей?")

            @Html.RadioButton("radio", true,true)
            <label class="form-check-label">Да</label>

            @Html.RadioButton("radio",false )
            <label class="form-check-label">Нет</label>

            <button class="button-voting">Отправить</button>
        </div>
        }

    </div>

</div>